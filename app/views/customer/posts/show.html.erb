<h1>投稿詳細</h1>
  <table>
    <tr>
      <td>
        <%= attachment_image_tag @post, :post_image, :fill, 300, 300, fallback: 'no-image.jpg', size: '300x300' %>
      </td>
      <td>
        <%= @post.post_title %>
      </td>
      <td>
        <%= @post.post_sentence %>
      </td>
      <td>
        <%= @post.user.name %>
      </td>
      <td>
        <% if @post.favorited_by?(current_user) %>
          <%= link_to customer_post_favorite_path(@post), method: :delete do %>
            <i class="glyphicon glyphicon-heart" aria-hidden="true" style="color: red;"></i>
            <%= @post.favorites.count %>
          <% end %>
        <% else %>
          <%= link_to customer_post_favorites_path(@post), method: :post do %>
            <i class="glyphicon glyphicon-heart" aria-hidden="true" style="color: grey;"></i>
            <%= @post.favorites.count %>
          <% end %>
        <% end %>
      </td>
      <td>
        コメント数：<%= @post.post_comments.count %>
      </td>
      <% if @post.user == current_user %>
        <td>
        <%= link_to "編集する", edit_customer_post_path(@post), class: "btn btn-primary" %>
      </td>
        <td><%= link_to "削除", customer_post_path(@post), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn btn-danger destroy_post_#{@post.id}" %>
        </td>
      <% end %>
    </tr>
  </table>

  <% @post.post_comments.each do |post_comment| %>
    <div>
      <div>
         <%= post_comment.user.name %>
      <% if post_comment.user == current_user %>
          <div>
            <%= link_to "削除", customer_post_path(@post), method: :delete, class: "btn btn-danger " %>
        </div>
      <% end %>
    </div>
  <% end %>

  <%= form_for [:customer, @post, @post_comment] do |f| %>
    <div class="row">
      <div class="col-sm-12">
        <%= f.text_field :comment, class: "form-control",placeholder: "コメントをここに" %>
      </div>
    </div>
    <%= f.submit '送信' %>
  <% end %>
