<div class="content">
  <div>
    <h1><i class="fa fa-blog"></i>投稿一覧</h1>
  </div>
</div>

<div class="new">
  <div>
    <% if user_signed_in? %>
    投稿をする方はこちらを
      <%= link_to new_customer_post_path do %>
        <i class="fa fa-plus-circle fa-lg"></i>
      <% end %>
    クリック
    <% end %>
  </div>
</div>

<% @posts.each do |post| %>
  <div class="col-xs-6 col-xs-offset-3">
    <table class="table">
      <tbody>
        <% if user_signed_in? %>
          <tr>
            <th></th>
            <th><%= attachment_image_tag post, :post_image, :fill, 300, 300, fallback: 'no-image.jpg', size: '300x300' %></th>
          </tr>
          <tr>
            <th>アカウント名</th>
            <th><%= post.user.account_name %></th>
          </tr>
          <tr>
            <th>タイトル</th>
            <th><%= link_to post.post_title, customer_post_path(post.id) %></th>
          </tr>
          <tr>
            <th>投稿内容</th>
            <th><%= post.post_sentence %></th>
          </tr>
        <% else %>
          <tr>
            <th></th>
            <th><%= attachment_image_tag post, :post_image, :fill, 300, 300, fallback: 'no-image.jpg', size: '300x300' %></th>
          </tr>
          <tr>
            <th>アカウント名</th>
            <th><%= post.user.account_name %></th>
          </tr>
          <tr>
            <th>タイトル</th>
            <th><%= link_to post.post_title, customer_post_path(post.id) %></th>
          </tr>
          <tr>
            <th>投稿内容</th>
            <th><%= post.post_sentence %></th>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>
