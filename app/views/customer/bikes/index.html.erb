<div class="content">
  <div>
    <h1><i class="fa fa-motorcycle"></i>バイク一覧</h1>
  </div>
</div>

<div class="search">
  <div>
    <%= render "customer/bikes/search", manufacturers: @manufacturers %>
    <% if controller.action_name == "search" %>
      <div class="title-box">
        <h1 class="title"><%= @manufacturer.manufacturer_name %>のバイク一覧(全 <%= @bikes.count %> 件)</h1>
      </div>
    <% end %>
  </div>
</div>

<div class="col-xs-6 col-xs-offset-3">
  <table class="table">
    <thead>
      <tr>
        <td>バイク画像</td>
        <td>バイク名</td>
        <td>メーカー</td>
      </tr>
    </thead>
    <tbody>
      <% @bikes.each do |bike| %>
        <% if bike.manufacturer.status == '有効' %>
          <tr>
            <td><%= image_tag attachment_url(bike, :bike_image, :fill, 300, 200, format: "jpg") %></td>
            <td><%= link_to bike.bike_name, customer_bike_path(bike.id) %></td>
            <td><%= bike.manufacturer.manufacturer_name %></td>
            <td>
            </td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>


