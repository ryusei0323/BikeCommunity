<% if post.favorited_by?(current_user) %>
  <%= link_to customer_post_favorite_path(post), data: {"turbolinks" => false}, method: :delete, remote: true do %>
    <i class="fa fa-heart" style="color: red;"></i>
    <%= post.favorites.count %>
  <% end %>
<% else %>
  <%= link_to customer_post_favorites_path(post), data: {"turbolinks" => false}, method: :post, remote: true do %>
    <i class="fa fa-heart" style="color: grey;"></i>
    <%= post.favorites.count %>
  <% end %>
<% end %>