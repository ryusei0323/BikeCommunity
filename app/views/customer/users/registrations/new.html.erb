<div class="container">
  <div class="row">
    <div class="text-center">
      <h1 class="title">Sign up</h1>
      <div class="form-horizontal" role="form">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "customer/users/shared/error_messages", resource: resource %>
          <div class="form-group">
            <div class="col-sm-3">
            </div>
            <div>
              <%= f.label :名前, class: "control-label col-sm-2" %>
            </div>
            <div class="col-sm-3">
              <%= f.text_field :name, class: 'form-control', autofocus: true, autocomplete: "name" %>
            </div>
          </div>

           <div class="form-group">
              <div class="col-sm-3">
              </div>
              <div>
                <%= f.label :アカウント名, class: "control-label col-sm-2" %>
              </div>
              <div class="col-sm-3">
                <%= f.text_field :account_name, class: 'form-control', autofocus: true, autocomplete: "account_name" %>
              </div>
            </div>

            <div class="form-group">
              <div class="col-sm-3">
              </div>
              <div>
                <%= f.label :メールアドレス, class: "control-label col-sm-2" %>
              </div>
              <div class="col-sm-3">
                <%= f.email_field :email, class: 'form-control', autofocus: true, autocomplete: "email" %>
              </div>
            </div>

            <div class="form-group">
              <div class="col-sm-3">
              </div>
              <div>
                <%= f.label :パスワード, class: "control-label col-sm-2" %>
              </div>
              <div class="col-sm-3">
                <%= f.password_field :password, class: 'form-control', autocomplete: "current-password" %>
              </div>
            </div>

            <div class="form-group">
              <%= f.submit "Sign up", class: "btn btn-info btn-lg" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>