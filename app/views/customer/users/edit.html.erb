<div class="content">
  <div>
    <h1><i class="fa fa-user"></i>マイページ編集</h1>
  </div>
</div>

<%= form_for(@user, url: customer_user_path) do |f| %>

  <!-- エラーメッセージ表示-->
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h3><%= @user.errors.count %>error prohibited this obj from being saved:</h3><
      <ul>
        <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <!-- エラーメッセージ表示-->
  <div class="col-xs-8 col-xs-offset-2">
    <table class="table">
      <tr>
        <td>
          <%= f.label :プロフィール画像 %>
        </td>
        <td>
          <%= f.attachment_field :profile_image, class: "user_image" %>
        </td>
      </tr>
      <tr>
        <td>
          <%= f.label :名前 %>
        </td>
        <td>
          <%= f.text_field :name, class: "name" %>
        </td>
      </tr>
      <tr>
        <td>
          <%= f.label :アカウント名 %>
        </td>
        <td>
          <%= f.text_field :account_name, class: "introduction" %>
        </td>
      </tr>
      <tr>
        <td>
          <%= f.label :自己紹介 %>
        </td>
        <td>
          <%= f.text_area :profile_sentence, class: "introduction" %>
        </td>
      </tr>
      <tr>
        <td>
          <%= f.label :メールアドレス %>
        </td>
        <td>
          <%= f.email_field :email, class: "form-control email" %>
        </td>
      </tr>
      <tr>
        <td>
         <%= f.submit %>
       </td>
     </tr>
   </table>
  </div>
<% end %>