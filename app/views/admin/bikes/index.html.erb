<div class="content">
  <div>
    <h1>バイク一覧</h1>
  </div>
</div>

<%= link_to new_admin_bike_path do %>
 <i class="glyphicon glyphicon-plus-sign" style="font-size:30px; color:darkgray;"></i>
<% end %>

<div class="col-xs-6 col-xs-offset-3">
  <table class="table">
    <thead>
      <tr>
        <td>バイクID</td>
        <td>バイク名</td>
        <td>メーカー</td>
        <td>ステータス</td>
      </tr>
    </thead>
    <tbody>
      <% @bikes.each do |bike| %>
          <tr>
            <td><%= bike.id %></td>
            <td><%= link_to bike.bike_name, admin_bike_path(bike.id) %></td>
            <td><%= bike.manufacturer.manufacturer_name %></td>
            <td>
              <% if bike.bike_status == '有効' %>
                表示中
              <% else %>
                表示停止
              <% end %>
            </td>
          </tr>
      <% end %>
    </tbody>
  </table>
</div>
