<div class="content">
  <div>
    <h1>バイク詳細</h1>
  </div>
</div>

<div class="col-xs-6 col-xs-offset-3">
  <table class="table">
    <span>
      <%= attachment_image_tag @bike, :bike_image, :fill, 300, 300, fallback: 'no-image.jpg', size: '300x300' %>
    </span>

    <tr>
      <th>バイクID</th>
      <th><%= @bike.id %></th>
    </tr>

    <tr>
      <th>バイク名</th>
      <th><%= @bike.bike_name %></th>
    </tr>

    <tr>
      <th>バイクタイプ名</th>
      <th><%= @bike.bike_type_name %></th>
    </tr>

    <tr>
      <th>排気量</th>
      <th><%= @bike.displacement %></th>
    </tr>

    <tr>
      <th>バイク説明文</th>
      <th><%= @bike.bike_sentence %></th>
    </tr>

    <tr>
      <th>メーカ名</th>
      <th><%= @bike.manufacturer.manufacturer_name %></th>
    </tr>

    <tr>
      <th>バイクステータス</th>
      <th>
        <% if @bike.bike_status == '有効' %>
          表示中
        <% else %>
          表示停止中
        <% end %>
      </th>
    </tr>
    <tr>
      <th><%= link_to "編集する", edit_admin_bike_path(@bike), class: "btn btn-primary" %></th>
    </tr>
  </table>
</div>


