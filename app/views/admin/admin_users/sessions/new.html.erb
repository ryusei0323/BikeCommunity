<div class="container">
  <div class="row">
    <div class="text-center">
      <h1 class="title">管理者ログイン</h1>
      <div class="form-horizontal" role="form">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

            <div class="form-group">
              <div class="col-sm-3">
              </div>
              <div>
                <%= f.label :メールアドレス, class: "control-label col-sm-2" %>
              </div>
              <div class="col-sm-3">
                <%= f.email_field :email, class: 'form-control', autofocus: true, autocomplete: "email" %>
              </div>
            </div>

            <div class="form-group">
              <div class="col-sm-3">
              </div>
              <div>
                <%= f.label :パスワード, class: "control-label col-sm-2" %>
              </div>
              <div class="col-sm-3">
                <%= f.password_field :password, class: 'form-control', autocomplete: "current-password" %>
              </div>
            </div>

            <div class="form-group">
              <%= f.submit "ログイン", class: "btn btn-primary btn-lg" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

