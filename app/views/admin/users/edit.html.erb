<div class="content">
  <div>
    <h1><%= @user.name %>さんの会員情報編集</h1>
  </div>
</div>

<%= form_for(@user, url: admin_user_path) do |f| %>
  <!-- エラーメッセージ表示-->
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h3><%= @user.errors.count %>error prohibited this obj from being saved:</h3><
      <ul>
        <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <!-- エラーメッセージ表示-->
  <div class="col-xs-8 col-xs-offset-2">
    <table class="table">
      <tr>
        <td>
          <%= f.label :名前 %>
        </td>
        <td>
          <%= f.text_field :name, class: "form-control email" %>
        </td>
      </tr>
      <tr>
        <td>
          <%= f.label :アカウント名 %>
        </td>
        <td>
          <%= f.text_field :account_name, class: "form-control email" %>
        </td>
      </tr>
      <tr>
        <td>
          <%= f.label :自己紹介 %>
        </td>
        <td>
          <%= f.text_area :profile_sentence, class: "form-control email" %>
        </td>
      </tr>
      <tr>
        <td>
          <%= f.label :メールアドレス %>
        </td>
        <td>
          <%= f.email_field :email, class: "form-control email" %>
        </td>
      </tr>
      <tr>
        <td>
           <%= f.label :会員ステータス %>
        </td>
        <td>
          <%= f.radio_button :user_status, :有効, class: "user_status" %>
        <%= f.label :有効 %>
        <%= f.radio_button :user_status, :退会済, class: "user_status" %>
        <%= f.label :退会済み %>
        </td>
      </tr>
      <tr>
        <td>
         <%= f.submit "変更を保存する", class: "btn btn-success" %>
       </td>
     </tr>
   </table>
  </div>
<% end %>